<% layout('layout') -%>
<div class="container">
    <div class="row">
        <div class="col-sm-8 col-xs-12">
            <h3><%=title%></h3>
            <form id="page-<%=id%>" method="POST" action="" >
                    <div class="sep form-group">
                        <label class="control-label" for="to"><%-headingOne%></label>
                        <textarea class="form-control" name="text" id="text" cols="30" rows="10"><%=text%></textarea>
                    </div>
                    <div class="sep form-group">
                        <label class="control-label" for="to"><%-headingTwo%></label>
                        <textarea class="form-control" id="result" cols="30" rows="10" readonly><%=result%></textarea>
                    </div>
                    <div class="form-group">
                        <div id="error"></div>
                    </div>
                    <div class="sep form-group">
                        <input type="submit" value="Test" class="btn btn-success">
                    </div>
            </form>
        </div>
    </div>
</div>